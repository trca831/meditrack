<h1>Medication Log</h1>
<% if (user) { %>
   <p>Hello, <%= user.name %> is logged on.</p>
   <form method="POST" action="/sessions/logoff">
   <input type="hidden" name="_csrf" value="<%= csrfToken %>">
   <button>Logoff</button>
   </form>
<% } %>
<% if (errors) {
    errors.forEach((err) => { %>
      <div>
        Error: <%= err %>
      </div>
    <% })
  } %>
  <% if (info) {
    info.forEach((msg) => { %>
      <div>
        Info: <%= msg %>
      </div>
    <% })
  } %>
<hr />