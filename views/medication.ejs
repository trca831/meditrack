<h2><%= med ? 'Edit Medication' : 'New Medication' %></h2>

<form method="POST" action="<%= med ? '/medications/update/' + medId : '/medications' %>">
  <input type="hidden" name="_csrf" value="<%= _csrf %>">

  <label>Name</label>
  <input type="text" name="name" value="<%= med ? med.name : '' %>">

  <label>Dosage</label>
  <input type="text" name="dosage" value="<%= med ? med.dosage : '' %>">

  <label>Frequency</label>
  <input type="text" name="frequency" value="<%= med ? med.frequency : '' %>">

  <button type="submit"><%= med ? 'Update' : 'Create' %></button>
</form>