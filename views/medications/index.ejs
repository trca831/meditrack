<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>

<main>
  <h1>Add a New Medication</h1>

  <form method="POST" action="/medications">
    <label for="name">Medication Name:</label><br />
    <input id="name" name="name" type="text" required /><br />

    <label for="dosage">Dosage (e.g. 10mg):</label><br />
    <input id="dosage" name="dosage" type="text" required /><br />

    <label for="frequency">Frequency:</label><br />
    <select id="frequency" name="frequency" required>
      <option value="">Select...</option>
      <option value="Once a day">Once a day</option>
      <option value="Twice a day">Twice a day</option>
      <option value="Three times a day">Three times a day</option>
      <option value="As needed">As needed</option>
    </select><br />

    <label for="timeOfDay">Time of Day:</label><br />
    <select id="timeOfDay" name="timeOfDay">
      <option value="Morning">Morning</option>
      <option value="Afternoon">Afternoon</option>
      <option value="Evening">Evening</option>
      <option value="Night">Night</option>
    </select><br />

    <label for="startDate">Start Date:</label><br />
    <input id="startDate" name="startDate" type="date" required /><br />

    <label for="endDate">End Date (optional):</label><br />
    <input id="endDate" name="endDate" type="date" /><br />

    <label for="notes">Notes:</label><br />
    <textarea id="notes" name="notes" maxlength="250"></textarea><br />

    <button type="submit">Add Medication</button>
  </form>
</main>

<%- include("partials/footer.ejs") %>