<main>
  <h2>Add a New Medication</h2>
  <form action="/medications" method="POST">
    <!-- Medication Name -->
    <label for="name">Medication Name:</label>
    <input id="name" name="name" type="text" required minlength="2" maxlength="100" /><br />

    <!-- Dosage -->
    <label for="dosage">Dosage (mg):</label>
    <input id="dosage" name="dosage" type="number" min="1" max="10000" required /><br />

    <!-- Frequency (matches enum) -->
    <label for="frequency">Frequency:</label>
    <select name="frequency" id="frequency" required>
      <option value="">--Select Frequency--</option>
      <option value="Once a day">Once a day</option>
      <option value="Twice a day">Twice a day</option>
      <option value="Three times a day">Three times a day</option>
      <option value="As needed">As needed</option>
    </select><br />

    <!-- Date -->
    <label for="date">Start Date:</label>
    <input type="date" id="date" name="date" required /><br />

    <!-- Notes (Array of Strings) -->
    <label for="notes">Notes (separate by commas):</label>
    <textarea id="notes" name="notes" placeholder="e.g., Take with food, Avoid driving"></textarea><br />

    <button type="submit">Add Medication</button>
  </form>
</main>

